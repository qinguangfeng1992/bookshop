<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hzit.dao.mapper.BookMapper">

    <sql id="bookBaseColumnSql">
        bookid,
        bookname,
        bookurl,
        bookprice,
        bookstore,
        bookdelete,
        bookauthor,
        booktime,
        booktypeid
    </sql>

    <sql id="bookBaseWhereSql">
        <if test="map!=null">
            <where>
                <if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(map.bookid)">
                    bookid = #{map.bookid}
                </if>
                <if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(map.bookname)">
                    AND bookname = #{map.bookname}
                </if>
                <if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(map.bookurl)">
                    AND bookurl = #{map.bookurl}
                </if>
                <if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(map.bookprice)">
                    AND bookprice = #{map.bookprice}
                </if>
                <if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(map.bookstore)">
                    AND bookstore = #{map.bookstore}
                </if>
                <if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(map.bookdelete)">
                    AND bookdelete = #{map.bookdelete}
                </if>
                <if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(map.bookauthor)">
                    AND bookauthor = #{map.bookauthor}
                </if>
                <if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(map.booktime)">
                    AND booktime = #{map.booktime}
                </if>
                <if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(map.booktypeid)">
                    AND booktypeid = #{map.booktypeid}
                </if>
            </where>
        </if>
    </sql>

    <insert id="insertBook" parameterType="com.hzit.dao.entity.Book">
        INSERT INTO book(
        <include refid="bookBaseColumnSql"/>
        )VALUES(
            #{bookid},
            #{bookname},
            #{bookurl},
            #{bookprice},
            #{bookstore},
            #{bookdelete},
            #{bookauthor},
            #{booktime},
            #{booktypeid}
        )
    </insert>

    
    <delete id="deleteBookByBookid" parameterType="String">
        DELETE FROM book WHERE bookid = #{bookid}
    </delete>

    <update id="updateBook" parameterType="com.hzit.dao.entity.Book">
        UPDATE book
        <set>
            <if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(bookname)">
                bookname = #{bookname} ,
            </if>
            <if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(bookurl)">
                bookurl = #{bookurl} ,
            </if>
            <if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(bookprice)">
                bookprice = #{bookprice} ,
            </if>
            <if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(bookstore)">
                bookstore = #{bookstore} ,
            </if>
            <if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(bookdelete)">
                bookdelete = #{bookdelete} ,
            </if>
            <if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(bookauthor)">
                bookauthor = #{bookauthor} ,
            </if>
            <if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(booktime)">
                booktime = #{booktime} ,
            </if>
            <if test="@org.apache.commons.lang3.StringUtils@isNotEmpty(booktypeid)">
                booktypeid = #{booktypeid} ,
            </if>
        </set>
        WHERE bookid = #{bookid}
    </update>

    <select id="searchBookByParams" parameterType="map" resultMap="bookMap">
        SELECT
        <include refid="bookBaseColumnSql"/>
        FROM book
        <include refid="bookBaseWhereSql"/>
    </select>

    <resultMap type="com.hzit.dao.entity.Book" id="bookMap">
        <id column="bookid" property="bookid"/>
        <result column="bookname" property="bookname"/>
        <result column="bookurl" property="bookurl"/>
        <result column="bookprice" property="bookprice"/>
        <result column="bookstore" property="bookstore"/>
        <result column="bookdelete" property="bookdelete"/>
        <result column="bookauthor" property="bookauthor"/>
        <result column="booktime" property="booktime"/>
        <result column="booktypeid" property="booktypeid"/>
    </resultMap>

</mapper>
